<div class="row ">
  <% @lists.each do |list| %>
    <div class="col-12 col-sm-6 col-lg-3">
      <%= link_to list_path(list), class: "link" do %>
        <div class="card-category m-3" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://picsum.photos/800/300)">
          <h2><%= list.name %></h2>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
