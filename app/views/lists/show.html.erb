<div class="d-flex m-3 justify-content-end">
  <%= link_to 'Go back', root_path, class: "me-3 btn btn-primary text-white" %>
  <%= link_to 'Add a Movie', new_list_bookmark_path(@list), class: "btn btn-warning text-white" %>
</div>

<h2 class="m-3"><%= @list.name %></h2>
<div class="container">
  <div class="row">
    <% @list.movies.each do |movie| %>
        <div class="col-6">
          <div class="card-product m-3">
            <img src="<%= movie.poster_url %>" />
            <div class="card-product-infos">
              <h2><%= movie.title %></h2>
              <p><strong><%= movie.bookmarks.find_by_list_id(@list.id).comment %></strong></p>
            </div>
          </div>
        </div>
    <% end %>
  </div>
</div>
